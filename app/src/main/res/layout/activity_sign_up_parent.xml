<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.khalyd.cecyteapp.ActivitiesDeprecated.SignUpParent"
    android:id="@+id/relative_parentSign"
    >

    <ImageView
        android:id="@+id/loadingViewTutorSignUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:scaleType="centerCrop"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/back3"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_action_back"
        android:clickable="true" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="9dp"
        android:src="@mipmap/ic_signup"
        android:layout_below="@+id/backToSIGN"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutor"
        android:textColor="@color/sloganColor"
        android:layout_marginStart="62dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />


    <ScrollView
        android:id="@+id/Scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarSize="4dp"
        android:layout_below="@id/student"
        android:scrollbarThumbVertical="@color/colorScroll"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/enroollmens_Students_for_sign_Up_Parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                android:textColorHint="#9E9E9E"
                app:counterEnabled="true"
                app:counterMaxLength="14"
                app:counterOverflowTextAppearance="@style/CounterOverFlow"
                app:counterTextAppearance="@style/CounterNormal"
                >

                <EditText
                    android:id="@+id/get_enroollmens_Students_for_sign_Up_Parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="35"
                    android:inputType="number"
                    android:backgroundTint="#BDBDBD"
                    android:textColorHint="#9E9E9E"
                    android:textColor="#FFFF"
                    android:textCursorDrawable="@drawable/mycursor"
                    android:hint="@string/enrollment_target"
                    android:drawableStart="@mipmap/ic_card"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/email__parent_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColorHint="#9E9E9E"
                android:layout_marginTop="20dp"
                >

                <EditText
                    android:id="@+id/get_email__parent_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="35"
                    android:inputType="textEmailAddress"
                    android:backgroundTint="#BDBDBD"
                    android:textColorHint="#9E9E9E"
                    android:textColor="#FFFF"
                    android:textCursorDrawable="@drawable/mycursor"
                    android:hint="@string/email_discrect"
                    android:drawableStart="@drawable/text_pras_no"
                    />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/password_Parent_Sign_Up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColorHint="#9E9E9E"
                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/sloganColor"

                >

                <EditText
                    android:id="@+id/get_password_Parent_Sign_Up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="35"
                    android:inputType="textPassword"
                    android:backgroundTint="#BDBDBD"
                    android:textColorHint="#9E9E9E"
                    android:textColor="#FFFF"
                    android:textCursorDrawable="@drawable/mycursor"
                    android:hint="@string/pass"
                    android:drawableStart="@drawable/text_passwordoo"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/password_Parent_Sign_Up_Confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColorHint="#9E9E9E"
                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/sloganColor"
                >

                <EditText
                    android:id="@+id/get_password_Parent_Sign_Up_Confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="35"
                    android:inputType="textPassword"
                    android:backgroundTint="#BDBDBD"
                    android:textColorHint="#9E9E9E"
                    android:textColor="#FFFF"
                    android:textCursorDrawable="@drawable/mycursor"
                    android:hint="@string/pass_confirm"
                    android:drawableStart="@drawable/text_passwordoo"
                    />

            </android.support.design.widget.TextInputLayout>


            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/btn_parent_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registrarse"
                android:gravity="center"
                android:background="@drawable/back_relleno"
                android:textColor="#ffff"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="75dp"
                app:initialCornerAngle="100dp"
                app:finalCornerAngle="100dp"
                app:spinning_bar_width="2dp"
                app:spinning_bar_color="@color/yellow"
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
