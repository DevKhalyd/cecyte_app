<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_subjects"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/sloganColor"
    card_view:cardCornerRadius="4dp"
    android:layout_marginBottom="30dp"
    card_view:cardElevation="10dp"
    android:layout_marginTop="10dp"
    >

    <!-- Si quiero hacer pruebas le puedo asignar un tamaÃ±o especifico y luego se lo
    quito -->

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:id="@+id/cabazera"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/headProfileD"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"

                />

            <TextView
                android:id="@+id/positionD"
                android:layout_width="wrap_content"
                android:text="No disponible"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                />


            <TextView
                android:id="@+id/nameDirectivoPostD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:text="Name"
                android:textColor="@color/black"
                android:layout_marginTop="35dp"
                />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/seconHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <TextView
                android:id="@+id/titleDirectivo3D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:text="Title"
                android:textStyle="bold|italic"
                android:textColor="@color/black"
                android:textSize="17dp"
                />

            <TextView
                android:id="@+id/descriptionD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/profileSelecteD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Publicado para:"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/imageReferenceD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                 />



        </RelativeLayout>

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            >

            <TextView
                android:id="@+id/posted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publicado el :"
                android:textSize="15sp"
                android:textStyle="bold|italic"
                android:layout_marginStart="30dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/setDateFromDB"
                android:layout_below="@+id/posted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_marginStart="30dp"
                android:textColor="@color/black"
                />

        </RelativeLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>

