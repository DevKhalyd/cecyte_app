<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativesignin_Student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="false"
    tools:context="com.khalyd.cecyteapp.ActivitiesDeprecated.SignUpStudent">

    <ImageView
        android:id="@+id/loadingViewStudentSignUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/GGd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#80000000" />

    <ImageView
        android:id="@+id/back2"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_action_back"
        />

    <!--Remove clickeable from up-->


    <ImageView
        android:id="@+id/me"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@mipmap/ic_signup"
        />
    <TextView
        android:id="@+id/student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estudiante"
        android:textColor="@color/sloganColor"
        android:layout_marginStart="62dp"
        android:layout_below="@+id/me"
        android:layout_alignStart="@+id/me" />

    <ScrollView
        android:id="@+id/Scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarSize="4dp"
        android:layout_below="@id/student"
        android:scrollbarThumbVertical="@color/colorScroll"
        >

    <LinearLayout
        android:id="@+id/linearVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/student"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_up_student_number_enrollement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:textColorHint="#9E9E9E"
            app:counterEnabled="true"
            app:counterMaxLength="14"
            app:counterOverflowTextAppearance="@style/CounterOverFlow"
            app:counterTextAppearance="@style/CounterNormal"
            >

            <EditText
                android:id="@+id/get_Number_Student_sign_Up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="35"
                android:inputType="number"
                android:backgroundTint="#BDBDBD"
                android:textColorHint="#9E9E9E"
                android:textColor="#FFFF"
                android:textCursorDrawable="@drawable/mycursor"
                android:hint="@string/matricula"
                android:drawableStart="@mipmap/ic_card"
                />

        </android.support.design.widget.TextInputLayout>

        <!--Checar espacios entre uno y otro
            MarginTop
        -->


        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_student_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="0dp"
            android:textColorHint="#9E9E9E">

            <EditText
                android:id="@+id/get_email_student_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#BDBDBD"
                android:drawableStart="@drawable/text_pras_no"
                android:hint="@string/email"
                android:textColor="#FFFF"
                android:textColorHint="#9E9E9E"
                android:textCursorDrawable="@drawable/mycursor"
                android:inputType="textEmailAddress"
                />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/password_stundet_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#9E9E9E"
            app:passwordToggleTint="@color/sloganColor"
            app:passwordToggleEnabled="true"
            >

            <EditText
                android:id="@+id/get_password_stundet_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#BDBDBD"
                android:drawableStart="@drawable/text_passwordoo"
                android:hint="@string/pass"
                android:textColor="#FFFF"
                android:textColorHint="#9E9E9E"
                android:textCursorDrawable="@drawable/mycursor"
                android:inputType="textPassword"


                />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password_stundet_sign_up_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#9E9E9E"
            app:passwordToggleTint="@color/sloganColor"
            app:passwordToggleEnabled="true"
            >

            <EditText
                android:id="@+id/get_password_stundet_sign_up_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#BDBDBD"
                android:drawableStart="@drawable/text_passwordoo"
                android:hint="@string/pass_confirm"
                android:textColor="#FFFF"
                android:textColorHint="#9E9E9E"
                android:textCursorDrawable="@drawable/mycursor"
                android:inputType="textPassword"
                />


        </android.support.design.widget.TextInputLayout>



        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/sign_Up_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/back_relleno"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="@string/registrarse"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:layout_marginBottom="25dp"
            app:initialCornerAngle="100dp"
            app:finalCornerAngle="100dp"
            app:spinning_bar_width="2dp"
            app:spinning_bar_color="@color/yellow"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_next_activity"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_next_activity"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_next_activity"
                />


        </LinearLayout>


        <!--Poner los mismos tamaÃ±os para cada boton-->

        </LinearLayout>

    </ScrollView>



</RelativeLayout>
