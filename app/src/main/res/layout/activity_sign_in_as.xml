<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contenedor2"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.khalyd.cecyteapp.ActivitiesDeprecated.SignInAs"
    >
    <ImageView
        android:id="@+id/loadingChooseAcc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:fitsSystemWindows="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:background="@drawable/ic_action_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:clickable="true"
        />


    <Button
        android:id="@+id/btnStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/status2"
        android:padding="10dp"
        android:text="Estudiante"
        android:textColor="@drawable/text_selected_signas"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_marginBottom="96dp"
        android:layout_above="@+id/Teacher"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/Teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/status2"
        android:padding="10dp"
        android:text="Docente"
        android:textColor="@drawable/text_selected_signas"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/Parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/status2"
        android:padding="10dp"
        android:text="Tutor"
        android:textColor="@drawable/text_selected_signas"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_marginTop="96dp"
        android:layout_below="@+id/Teacher"
        android:layout_alignEnd="@+id/Teacher" />


</RelativeLayout>
