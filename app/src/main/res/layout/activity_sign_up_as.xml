<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.khalyd.cecyteapp.ActivitiesDeprecated.SignUpAs">

    <ImageView
        android:id="@+id/loadingChooseAcc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:fitsSystemWindows="true" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_action_back"
        android:clickable="true" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/back"
        >


        <Button
            android:id="@+id/btnSignUpStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/color_round_btn"
            android:padding="10dp"
            android:text="Estudiante"
            android:textColor="@drawable/color_text_signup_as"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            />


        <Button
            android:id="@+id/Teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/color_round_btn"
            android:padding="10dp"
            android:text="Docente"
            android:textColor="@drawable/color_text_signup_as"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            />

        <Button
            android:id="@+id/Parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/color_round_btn"
            android:padding="10dp"
            android:text="Tutor"
            android:textColor="@drawable/color_text_signup_as"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"
             />


    </LinearLayout>

</RelativeLayout>
